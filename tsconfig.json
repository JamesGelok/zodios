{
  // ts config for es 2021
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2021"],
    "outDir": "./lib",
    "alwaysStrict": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true
  },
  "exclude": ["node_modules", "lib", "examples", "**/*.spec.ts", "**/*.d.ts"]
}
